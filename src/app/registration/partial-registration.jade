#content(layout='column', flex='', role='main')

	md-content#content(layout='column', flex='', layout-align='center center')

		div(layout='row', layout-align='center center', layout-fill='')

			//- Adding a whiteframe elevation when on a window of width > 600px
			md-whiteframe(ng-class="{ 'md-whiteframe-z3': registration.$mdMedia('gt-xs') }", layout='column', flex='100', flex-gt-xs='30', layout-padding='')
				
				md-content

					div(layout='row')
						md-input-container(flex)
							label Username
							input(ng-model='user.username')

					div(layout='row')
						md-input-container(flex)
							label Mobile No
							input(ng-model='user.mobileno')

					div(layout='row')
						md-input-container(flex)
							label Email
							input(ng-model='user.email')

					div(layout='row')
						md-input-container(flex)
							label Passcode
							input(ng-model='user.passcode')

					div(layout='row')
						md-input-container(flex)
							label Conform Passcode
							input(ng-model='user.conformpasscode')

					div(layout='row')
						md-input-container(flex, layout='column', layout-gt-xs='row', layout-align='center', layout-align-gt-xs='center center')
							md-button.md-raised(flex='50', flex-xs='100', flex-sm='100') Cancel
							md-button.md-raised.md-primary(flex='50', flex-xs='100' flex-sm='100') Submit
